<?xml version="1.0" encoding="UTF-8"?>
<definitions name="LibraryService"
             targetNamespace="http://example.org/library"
             xmlns:tns="http://example.org/library"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">

  <types>
    <xsd:schema targetNamespace="http://example.org/library">
      <xsd:complexType name="BookInfo">
        <xsd:sequence>
          <xsd:element name="id" type="xsd:int" />
          <xsd:element name="inventory_number" type="xsd:string" />
          <xsd:element name="title" type="xsd:string" />
          <xsd:element name="author" type="xsd:string" />
          <xsd:element name="year" type="xsd:int" />
          <xsd:element name="location" type="xsd:string" />
          <xsd:element name="status" type="xsd:string" />
        </xsd:sequence>
      </xsd:complexType>

      <xsd:complexType name="LoanResult">
        <xsd:sequence>
          <xsd:element name="success" type="xsd:boolean"/>
          <xsd:element name="message" type="xsd:string"/>
          <xsd:element name="loan_id" type="xsd:int" minOccurs="0"/>
          <xsd:element name="inventory_number" type="xsd:string" minOccurs="0"/>
          <xsd:element name="date_taken" type="xsd:date" minOccurs="0"/>
        </xsd:sequence>
      </xsd:complexType>

      <xsd:complexType name="ReturnResult">
        <xsd:sequence>
          <xsd:element name="success" type="xsd:boolean"/>
          <xsd:element name="message" type="xsd:string"/>
        </xsd:sequence>
      </xsd:complexType>

      <xsd:element name="getBookByInventory">
        <xsd:complexType>
          <xsd:sequence>
            <xsd:element name="inventory_number" type="xsd:string"/>
          </xsd:sequence>
        </xsd:complexType>
      </xsd:element>

      <xsd:element name="getBookByInventoryResponse" type="tns:BookInfo"/>
      <xsd:element name="searchBooksByAuthor">
        <xsd:complexType>
          <xsd:sequence>
            <xsd:element name="author_name" type="xsd:string"/>
          </xsd:sequence>
        </xsd:complexType>
      </xsd:element>

      <!-- For simplicity BookList is an array of BookInfo as XML string -->
      <xsd:element name="searchBooksByAuthorResponse" type="xsd:string"/>
      <xsd:element name="registerLoan">
        <xsd:complexType>
          <xsd:sequence>
            <xsd:element name="inventory_number" type="xsd:string"/>
            <xsd:element name="reader_card" type="xsd:string"/>
          </xsd:sequence>
        </xsd:complexType>
      </xsd:element>
      <xsd:element name="registerLoanResponse" type="tns:LoanResult"/>
      <xsd:element name="returnBook">
        <xsd:complexType>
          <xsd:sequence>
            <xsd:element name="inventory_number" type="xsd:string"/>
          </xsd:sequence>
        </xsd:complexType>
      </xsd:element>
      <xsd:element name="returnBookResponse" type="tns:ReturnResult"/>
    </xsd:schema>
  </types>

  <message name="getBookByInventoryRequest">
    <part name="parameters" element="tns:getBookByInventory"/>
  </message>

  <message name="getBookByInventoryResponse">
    <part name="parameters" element="tns:getBookByInventoryResponse"/>
  </message>

  <message name="searchBooksByAuthorRequest">
    <part name="parameters" element="tns:searchBooksByAuthor"/>
  </message>
  <message name="searchBooksByAuthorResponse">
    <part name="parameters" element="tns:searchBooksByAuthorResponse"/>
  </message>

  <message name="registerLoanRequest">
    <part name="parameters" element="tns:registerLoan"/>
  </message>
  <message name="registerLoanResponse">
    <part name="parameters" element="tns:registerLoanResponse"/>
  </message>

  <message name="returnBookRequest">
    <part name="parameters" element="tns:returnBook"/>
  </message>
  <message name="returnBookResponse">
    <part name="parameters" element="tns:returnBookResponse"/>
  </message>

  <portType name="LibraryPortType">
    <operation name="getBookByInventory">
      <input message="tns:getBookByInventoryRequest"/>
      <output message="tns:getBookByInventoryResponse"/>
    </operation>
    <operation name="searchBooksByAuthor">
      <input message="tns:searchBooksByAuthorRequest"/>
      <output message="tns:searchBooksByAuthorResponse"/>
    </operation>
    <operation name="registerLoan">
      <input message="tns:registerLoanRequest"/>
      <output message="tns:registerLoanResponse"/>
    </operation>
    <operation name="returnBook">
      <input message="tns:returnBookRequest"/>
      <output message="tns:returnBookResponse"/>
    </operation>
  </portType>

  <binding name="LibraryBinding" type="tns:LibraryPortType">
    <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
    <operation name="getBookByInventory">
      <soap:operation soapAction="getBookByInventory"/>
      <input><soap:body use="literal"/></input>
      <output><soap:body use="literal"/></output>
    </operation>
    <operation name="searchBooksByAuthor">
      <soap:operation soapAction="searchBooksByAuthor"/>
      <input><soap:body use="literal"/></input>
      <output><soap:body use="literal"/></output>
    </operation>
    <operation name="registerLoan">
      <soap:operation soapAction="registerLoan"/>
      <input><soap:body use="literal"/></input>
      <output><soap:body use="literal"/></output>
    </operation>
    <operation name="returnBook">
      <soap:operation soapAction="returnBook"/>
      <input><soap:body use="literal"/></input>
      <output><soap:body use="literal"/></output>
    </operation>
  </binding>

  <service name="LibraryService">
    <port name="LibraryPort" binding="tns:LibraryBinding">
      <soap:address location="http://localhost/library/backend-php-legacy/soap-server.php"/>
    </port>
  </service>
</definitions>
